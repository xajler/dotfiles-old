Bundle 'scrooloose/syntastic'

let g:solarized_degrade = 1

let g:ctrlp_working_path_mode = 'ra'
let g:ctrlp_custom_ignore = {
    \ 'dir':  '\.git$\|\.hg$\|\.svn$|\.tmp$|node_modules$',
    \ 'file': '\.beam$\'
    \ }

